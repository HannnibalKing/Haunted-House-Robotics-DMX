# Environment Configuration for Combat Escape Room Controller
# Copy this file to .env and customize for your setup

# Server Configuration
PORT=3000
WS_PORT=8080

# MQTT Broker Settings
MQTT_BROKER=mqtt://localhost:1883
MQTT_USERNAME=combat_user
MQTT_PASSWORD=secure_password

# Mission Settings
MISSION_TIMEOUT=1200
MAX_PLAYERS=6
MIN_PLAYERS=2

# Logging Configuration  
LOG_LEVEL=info
LOG_DIR=./logs

# Hardware Integration
ARDUINO_SERIAL_PORT=COM3
BAUD_RATE=115200

# Audio Settings
AUDIO_VOLUME=0.8
AUDIO_PATH=./audio

# Safety Settings
EMERGENCY_STOP_PIN=2
MAX_SMOKE_DURATION=300
LIGHTING_MAX_INTENSITY=255

# Development Mode
NODE_ENV=production
DEBUG_MODE=false